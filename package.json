{
  "name": "video-generator",
  "version": "1.0.0",
  "description": "Service to generate videos from video templates",
  "repository": "git@prod-gitlab-ui.sprinklr.com:sprinklr/frontend/video-generator.git",
  "private": true,
  "engines": {
    "node": ">= 18.9 < 21"
  },
  "type": "module",
  "devDependencies": {
    "@types/express": "4.17.21",
    "@types/ffprobe-static": "^2.0.3",
    "@types/fluent-ffmpeg": "2.1.24",
    "@types/lodash": "^4.17.1",
    "@types/node": "20",
    "@types/tmp": "0.2.6",
    "@typescript-eslint/eslint-plugin": "7.6",
    "@typescript-eslint/parser": "7.6",
    "concurrently": "8.2.2",
    "dotenv": "16.4.5",
    "eslint": "8.56",
    "eslint-config-prettier": "9.1",
    "nodemon": "3.0.3",
    "prettier": "3.2",
    "rimraf": "5.0",
    "tsc-alias": "1.8.8",
    "typescript": "5.4"
  },
  "scripts": {
    "dev": "nodemon build/server/index.js",
    "clean": "rimraf build tmp",
    "prebuild": "yarn run lint",
    "build": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "build:watch": "concurrently --kill-others \"tsc -w -p tsconfig.json\" \"tsc-alias -w -p tsconfig.json\"",
    "build:release": "yarn run clean && tsc -p tsconfig.release.json && tsc-alias -p tsconfig.json",
    "lint": "eslint . --ext .ts --ext .mts",
    "prettier": "prettier --write .",
    "generate-video": "node build/scripts/createVideo.js",
    "bench": "node build/scripts/bench.js"
  },
  "dependencies": {
    "@pixi/node": "7.3.0",
    "canvas": "2.11.2",
    "express": "4.18.2",
    "fastq": "1.17.1",
    "ffmpeg-static": "5.2.0",
    "ffprobe-static": "3.1.0",
    "fluent-ffmpeg": "2.1.2",
    "json-2-csv": "5.5.1",
    "lodash": "^4.17.21",
    "tmp": "0.2.3"
  }
}
